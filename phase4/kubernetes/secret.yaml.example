# Kubernetes Secret for Todo Chatbot
# Contains sensitive credentials - DO NOT commit actual values to git
# AI Tool: kubectl-ai - kubectl ai "create secret for database url and api keys"
#
# Usage:
# 1. Copy this file to secret.yaml
# 2. Replace <base64-encoded-value> with actual base64-encoded values
# 3. Apply: kubectl apply -f kubernetes/secret.yaml
#
# To encode values: echo -n "your-value" | base64
apiVersion: v1
kind: Secret
metadata:
  name: todo-secrets
  labels:
    app.kubernetes.io/name: todo-chatbot
    app.kubernetes.io/component: secrets
    app.kubernetes.io/managed-by: kubectl
type: Opaque
data:
  # Neon PostgreSQL connection string
  # Example: postgresql://user:password@host:5432/dbname
  DATABASE_URL: <base64-encoded-value>

  # Groq AI API key from console.groq.com
  GROQ_API_KEY: <base64-encoded-value>

  # JWT secret for authentication (must match frontend)
  BETTER_AUTH_SECRET: <base64-encoded-value>
